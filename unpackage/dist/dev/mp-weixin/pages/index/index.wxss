.all {
  background-color: #e9e9e9;
  height: 100vh;
}
.main-container {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  margin: 0 30rpx;
  padding: 30rpx 0;
}
.main-container image {
  width: 300rpx;
  height: 300rpx;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  margin-top: 30rpx;
}
.title text {
  font-size: 45rpx;
  font-weight: 500;
}
.describe {
  margin-top: 20rpx;
}
.describe text {
  color: #C8C7CC;
}
image {
  margin-top: 20rpx;
  -webkit-align-self: center;
          align-self: center;
  width: 100%;
  height: 500rpx;
}
.detail {
  margin-top: 60rpx;
  border-top: 1rpx solid #999;
  padding-top: 80rpx;
}
.detail ._ul {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  margin-top: 10rpx;
  -webkit-padding-start: 12rpx;
          padding-inline-start: 12rpx;
}
.detail ._li {
  list-style: none;
}
.detail ._li text {
  font-weight: 300;
  font-size: 20rpx !important;
  color: #b9b8bc;
}
.detail ._li:before {
  content: "";
  display: -webkit-inline-box;
  display: -webkit-inline-flex;
  display: inline-flex;
  width: 10rpx;
  height: 10rpx;
  background-color: #b9b8bc;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  margin-right: 5px;
}
.detail text:nth-child(1) {
  font-weight: 500;
  font-size: 25rpx;
}
.auth-button {
  font-size: 36rpx;
  margin-top: 60rpx;
  -webkit-border-radius: 40rpx;
          border-radius: 40rpx;
  height: 80rpx;
  width: 80%;
  line-height: 80rpx;
}

